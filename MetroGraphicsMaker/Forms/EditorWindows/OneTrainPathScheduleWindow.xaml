<Window x:Class="WpfApplication1.OneTrainPathScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Окно расписания" Height="500" Width="525" Topmost="True">
    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" ></RowDefinition>
            <RowDefinition Height="auto" ></RowDefinition>
            <RowDefinition Height="170*" ></RowDefinition>
            <RowDefinition Height="auto" ></RowDefinition>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="2">
            <DataGrid Name="ScheduleDataGrid" Grid.Row="2" AutoGenerateColumns="True"/>
        </ScrollViewer>

        <StackPanel HorizontalAlignment="Left" Grid.Row="1" Margin="10,0,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
